<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activity.TNaviSplashActivity">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/hiSplashBackgroundColor"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:weightSum="32"
        android:id="@+id/linearLayout_Main">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"/>

        <ImageView
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/splash_title"
            android:id="@+id/fatoslogo"
            android:layout_weight="9"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

        <LinearLayout
            android:id="@+id/ll_progressArea"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical">
        </LinearLayout>

        <ImageView
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/splash_logo"
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/fatostitle"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/we_loading"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/hi_splash_sdk"
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"/>
    </LinearLayout>
</FrameLayout>