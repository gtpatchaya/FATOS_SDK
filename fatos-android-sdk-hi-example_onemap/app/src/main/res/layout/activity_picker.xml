<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frameLayout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLayout_popup"
            android:weightSum="10"
            android:gravity="center">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/popup_bg_new"
                android:layout_weight="8">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_Name"
                        android:textSize="16dp"
                        android:gravity="center_vertical"
                        android:ellipsize="end"
                        android:text=""/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_Address"
                        android:textSize="16dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/hiListPopupAddrText"
                        android:ellipsize="end"
                        android:text=""/>
                </LinearLayout>

                <Button
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/selector_rg"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:id="@+id/poiview_result_route_btn"
                    android:onClick="onClickRoute"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="12dp"
            android:id="@+id/imageView_point"
            android:src="@drawable/popup_bg_point"
            android:layout_below="@+id/linearLayout_popup"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</FrameLayout>