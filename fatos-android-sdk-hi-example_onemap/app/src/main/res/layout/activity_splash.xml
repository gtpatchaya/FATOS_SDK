<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/hiSplashBackgroundColor"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:weightSum="32"
    android:id="@+id/linearLayout_Main">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"/>

    <ImageView
        android:layout_gravity="center_horizontal|center_vertical"
        android:src="@drawable/splash_title"
        android:id="@+id/fatoslogo"
        android:layout_weight="9"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4" >
        <ProgressBar
            android:id="@+id/loading_progress"
            android:indeterminate="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminateTintMode="src_in"/>
    </LinearLayout>

    <ImageView
        android:layout_gravity="center_horizontal|center_vertical"
        android:src="@drawable/splash_logo"
        android:layout_weight="3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/fatostitle"
        android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/we_loading"
        android:layout_gravity="center_horizontal|center_vertical"
        android:src="@drawable/hi_splash_sdk"
        android:layout_weight="3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>
</LinearLayout>
